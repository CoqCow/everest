.top-container {
  padding: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}
.card-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}
.card-name {
  color: #ff9630;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 8rpx;
}
.card-add {
  width: 125rpx;
  height: 125rpx;
  border-radius: 8rpx;
  margin-left: 390rpx
}
.card-time {
  font-size: 26rpx;
  color: #8999a5;
  margin-top: 8rpx;
}
.workbench{
  font-size: 30rpx;
  background: #f2f2f2;
  padding-bottom: 30rpx;
  margin-bottom:10rpx;
  color: #333;
  border-bottom: 1rpx solid #e1e1e1;
}
.title{
  font-size:40rpx;
  padding: 20rpx 20rpx;
  margin-bottom: 40rpx;
  display: block;
}
.list{
  display: flex;
  flex-direction: row;
  flex:1;
}
.items{
  width: 100rpx;
  flex:1;
  text-align: center;
}
.workbench .items image{
  width: 100rpx;
  height: 100rpx;
}
.workbench .items text{
  display: block;
  text-align: center;
  margin-top: 10rpx;
}
