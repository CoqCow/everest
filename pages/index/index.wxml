<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">昵称：{{userInfo.nickName}}</text>
       <text class="userinfo-gender">性别：{{userInfo.gender}}</text>
       <text class="userinfo-country">国家：{{userInfo.country}}</text>
       <text class="userinfo-province">省：{{userInfo.province}}</text>
       <text class="userinfo-city">市：{{userInfo.city}}</text>
       <text class="userinfo-openId">openId:</text>
       <text class="userinfo-unionId">unionId:</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
