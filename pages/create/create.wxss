/* pages/create/create.wxss */
.title{
    margin: 15rpx 5%;
    width: 90%;
    text-align: center;
    height: 60rpx;
    font-size: 38rpx;
    border-bottom: 1px solid #f5f5f5;
}
.card{
  margin: 5rpx;
}
.card-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius:100%;
  margin-right: 12rpx;
}
.card-name {
  color: #ff9630;
  font-weight: bold;
  font-size: 26rpx;
  margin-top: 8rpx;
  
}

.row .text{
  flex: 1;
  width: 100%;
  height: auto;
  font-size: 36rpx;
  color: #666;
  margin: 5rpx;
}
.bottom{
  width: 100%;
  background: #fff;
  display: flex;
  flex-flow:row nowrap;
  justify-content: center;
  align-items: center;
}
.bottom .btn{
  flex: 1;
  line-height: 2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 30rpx 30rpx;
}
.btn.success{
  background: #1aad19;
  color: #fff;
}
.btn.del{
  background: #e64340;
  color: #fff;
}
