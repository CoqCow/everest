.top-container {
  padding: 20rpx;
  border-bottom: 1rpx solid #e1e1e1;
}
.topic{
  font-size: 50rpx;
}
.card-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 12rpx
}
.card-time {
  font-size: 26rpx;
  color: #8999a5;
  margin-top: 8rpx;
}
.card-name {
  color: #ff9630;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 8rpx;
  margin-right: 300rpx;
}
.plan-intro {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #FAFAFA;
}
.intro-header {
  color: #888;
  font-weight: bold;
  padding: 15rpx 0;
}
.intro-content {
  font-size: 35rpx;
  line-height: 1.5;
  text-align: justify
}
.plan-meta {
  position: relative;
  padding: 20rpx;
  overflow: hidden;
}
.plan-meta .range {
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  width: 180rpx;
  background: #FFF;
  padding: 20rpx 10rpx;
  text-align: center;
  box-shadow: 2px 2px 10px #CCC;
}
.plan-meta .meta-info {
  margin-right: 200rpx;
}
.meta-info text {
  display: block
}
.user-image {
  font-weight: bold;
  font-size: 40rpx;
}
.other-meta {
  padding-top: 10rpx;
  color: #888;
  font-size: 30rpx;
}
.range text {
  display: block;
}
.range .score {
  font-size: 50rpx;
  font-weight: bold;
}

